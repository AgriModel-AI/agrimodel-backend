{
  "tags": [
    {
      "name": "User Community",
      "description": "Operations related to user-community relationships"
    }
  ],
  "security": [
    {
      "BearerAuth": []
    }
  ],
    "post": {
  "tags": ["User Community"],
  "summary": "Join a Community",
  "description": "Allows the authenticated user to join a community.",
  "security": [{ "BearerAuth": [] }],
  "parameters": [
    {
      "name": "communityId",
      "in": "path",
      "required": true,
      "schema": { "type": "integer" },
      "description": "ID of the community to join."
    }
  ],
  "responses": {
    "201": { "description": "Successfully joined the community." },
    "400": { "description": "User is already a member of this community." },
    "404": { "description": "Community not found." }
  }
},
    "delete": {
  "tags": ["User Community"],
  "summary": "Leave a Community",
  "description": "Allows the authenticated user to leave a community.",
  "security": [{ "BearerAuth": [] }],
  "parameters": [
    {
      "name": "communityId",
      "in": "path",
      "required": true,
      "schema": { "type": "integer" },
      "description": "ID of the community to leave."
    }
  ],
  "responses": {
    "200": { "description": "Successfully left the community." },
    "404": { "description": "Membership not found." }
  }
},
    "components": {
      "schemas": {
        "UserCommunity": {
          "type": "object",
          "properties": {
            "communityId": { "type": "integer", "example": 101 },
            "name": { "type": "string", "example": "Tech Enthusiasts" },
            "image": { "type": "string", "example": "https://example.com/community.jpg" },
            "description": { "type": "string", "example": "A community for tech lovers." },
            "createdAt": { "type": "string", "format": "date-time", "example": "2024-03-22T12:00:00Z" },
            "users": { "type": "integer", "example": 150 },
            "posts": { "type": "integer", "example": 30 },
            "joined": { "type": "boolean", "example": true }
          }
        }
      }
    }
  }
  