{
  "put": {
    "tags": ["Community"],
    "summary": "Update an existing community",
    "description": "Modify details of an existing community.",
    "security": [
      {
        "BearerAuth": []
      }
    ],
    "parameters": [
      {
        "name": "communityId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "integer"
        },
        "description": "ID of the community to update"
      }
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the community"
              },
              "description": {
                "type": "string",
                "description": "Description of the community"
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Community updated successfully"
      }
    }
  }
}
